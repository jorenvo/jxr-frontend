{
  "name": "jxr-frontend",
  "version": "1.0.0",
  "description": "",
  "main": "main.ts",
  "scripts": {
    "prebuild": "rm -rvf dist/*",
    "build": "mkdir -p $PWD/dist && tsc && cp $PWD/src/*.{html,css} dist/ && cp libs/*.js dist/js/ && cp libs/*.css dist/ && cp -r $PWD/jxr-indexed-code dist/jxr-code",
    "watch-tsc": "tsc --watch",
    "watch": "npm-watch",
    "test": "./prep_tests.sh && mocha -r ts-node/register test_src/*.spec.ts; rm -r $PWD/test_src",
    "env": "env"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,css",
      "quiet": false
    }
  },
  "keywords": [],
  "author": "Joren Van Onder <joren@jvo.sh>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "npm-watch": "^0.11.0",
    "typescript": "^4.6.2"
  }
}
